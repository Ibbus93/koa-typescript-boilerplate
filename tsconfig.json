{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "module": "CommonJS",
    "rootDir": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["./build/."],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
